<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/metrika</property>
        <property name="hibernate.connection.username">testuser</property>
        <property name="hibernate.connection.password">testuser</property>
        
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!--<property name="show_sql">true</property>-->

        <mapping class="models.Webpage" />
        <mapping class="models.Goal" />
        <mapping class="models.GoalReachesTrafficSource" />

        <!--Search Engine-->
        <mapping class="models.SearchEngine" />
        <mapping class="models.GoalsReachesBySearchEngine" />

        <!--Social Network-->
        <mapping class="models.SocialNetwork" />
        <mapping class="models.GoalsReachesBySocialNetwork" />


        <!--Referral Source-->
        <mapping class="models.ReferralSource" />
        <mapping class="models.GoalsReachesByReferralSource" />

        <!--Adv Engine-->
        <mapping class="models.AdvEngine" />
        <mapping class="models.GoalsReachesByAdvEngine" />

        <!--Search Phrase-->
        <mapping class="models.SearchPhrase" />
        <mapping class="models.GoalsReachesBySearchPhrase" />

    </session-factory>
</hibernate-configuration>